/* pages/creatac/creatac.wxss */
/* 背景1 */
.bg-1{
  background-color: #2DC1EF;
  position: absolute;
  width: 100%;
}
/* 背景2 */
.bg-2{
  width: 86%;
  position: absolute;
  top: 3%;
  left: 7%;
  background-color: white;
  box-shadow: 0rpx 0rpx 20rpx 10rpx rgba(17, 1, 1, 0.1);
  border-radius: 20px;
}
/* 头部 */
.top{
  width: 50%;
  margin-left: 25%;
}
.top-1{
  width: 60px;
  height: 60px;
  float: left;
}
.top-2{
  height: 60px;
  line-height: 60px;
  color: #343434;
  font-family: PingFangSC-Medium;
  font-weight: bold ;
  font-size: 20px;
}
/* 正则提示 */
.tishi{
  color: red;
  position: absolute;
  right: 20px;
  font-weight: normal;
  font-size: 12px;
}
/* 输入列表 */
.section{
  display: flex;
  border-bottom: 1rpx solid gray;
  flex-direction: row;
  font-weight: bold;
  padding-top: 20rpx;
  padding-bottom: 20rpx ;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.radio{
  margin-left: 20px;
}
/* 最后一个,无边框 */
.last{
  border-bottom: 0rpx;
}
/* 注册按钮 */
.zhuce{
  border-radius: 10px;
  color: white;
  font-size: 20px;
  font-weight: bold;
  background-color: #DDDDDD;
  width: 70%;
  margin-left: 15%;
  margin-top: 30px;
  margin-bottom: 30px;
}

/* 中部图片框 */
.upload{
  margin-top: 20px;
}
.tupian{
  width: 25%;
  height: auto;
}
.pic1{
  float: left;
}
.text{
  margin-left: 10px;
  margin-right: 15px;
  color: #939393;
  float: left;
  font-size: 13px;
}
/* 身份证图片部分 */
.third{
  margin-top: 30px;
}
.text2{
  margin-left: 10px;
  margin-right: 5px;
